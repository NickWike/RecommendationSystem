<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="wrap_content">

<RelativeLayout
    android:layout_marginHorizontal="20dp"
    android:id="@+id/user_name"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <TextView
        android:id="@+id/label_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:text="用户名称:"/>

    <EditText
        style="@style/UserPasswordUsername"
        android:id="@+id/edit_user_name"
        android:layout_toEndOf="@id/label_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/id_clear_username"
        android:layout_marginEnd="12dp"
        android:background="@mipmap/icon_clear_text"
        android:layout_alignParentEnd="true"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_centerVertical="true"/>

</RelativeLayout>

<RelativeLayout
    android:layout_marginHorizontal="20dp"
    android:id="@+id/user_password"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <TextView
        android:id="@+id/label_user_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:text="用户密码:"/>

    <EditText
        style="@style/UserPasswordUsername"
        android:id="@+id/edit_user_password"
        android:layout_toEndOf="@id/label_user_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/id_visibility_password"
        android:layout_marginEnd="10dp"
        android:background="@mipmap/icon_display_text"
        android:layout_alignParentEnd="true"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"/>
</RelativeLayout>

<RelativeLayout
    android:layout_marginHorizontal="20dp"
    android:id="@+id/confirm_password"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <TextView
        android:id="@+id/label_confirm_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:text="确认密码:"/>

    <EditText
        style="@style/UserPasswordUsername"
        android:id="@+id/edit_confirm_password"
        android:layout_toEndOf="@id/label_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" />

    <ImageView
        android:id="@+id/id_visibility_confirm_password"
        android:layout_marginEnd="10dp"
        android:background="@mipmap/icon_display_text"
        android:layout_alignParentEnd="true"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"/>
</RelativeLayout>


<RelativeLayout
    android:paddingBottom="10dp"
    android:layout_marginHorizontal="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/label_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="选择性别:"/>
    <RadioGroup
        android:id="@+id/gender_choose"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:checked="true"
            android:id="@+id/gender_M"
            android:text="汉子"
            android:tag="M"
            android:textColor="#161aff"
            android:buttonTint="#161aff"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/gender_F"
            android:text="妹纸"
            android:buttonTint="#ff14f7"
            android:tag="F"
            android:textColor="#ff14f7"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>
</RelativeLayout>

<RelativeLayout
    android:layout_marginHorizontal="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/have_question"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="@dimen/dp5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="有问题?"
        android:textColor="#003ba1"
        />
</RelativeLayout>

<Button
    android:id="@+id/btn_start_signup"
    android:textSize="20sp"
    android:text="注册"
    android:background="@drawable/shape_round_corner_white"
    android:backgroundTint="#96b8c6"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="50dp"
    android:layout_width="match_parent"
    android:layout_height="40dp" />

</LinearLayout>