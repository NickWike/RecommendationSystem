<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shape_round_corner_white"
    android:layout_marginBottom="10dp"
    android:translationZ="18dp"
    android:layout_marginHorizontal="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <CheckBox
            android:layout_centerVertical="true"
            android:id="@+id/id_shop_car_choose"
            style="@style/Widget.AppCompat.CompoundButton.RadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_centerVertical="true"
            android:background="@drawable/icon_shop_mini"
            android:id="@+id/id_shop_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toEndOf="@id/id_shop_car_choose"/>

        <TextView
            android:id="@+id/id_shop_name"
            android:layout_toEndOf="@id/id_shop_logo"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商店名称"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="领劵"
            android:layout_marginEnd="10dp"
            android:textColor="@color/colorBlack"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textSize="18sp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp">
        <ImageView
            android:id="@+id/id_shop_car_goods_im"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@mipmap/icon_image_null"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <TextView
            android:lines="2"
            android:ellipsize="end"
            android:text="[商品描述位置]可以任意添加这里在瞎写占位置测试效果"
            android:layout_marginEnd="15dp"
            android:textSize="16sp"
            android:id="@+id/id_shop_car_goods_desc"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/id_shop_car_goods_im"/>

        <TextView
            android:id="@+id/id_shop_car_goods_price"
            android:layout_marginBottom="40dp"
            android:layout_toEndOf="@id/id_shop_car_goods_im"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrice"
            android:textSize="16sp"
            android:text="@string/home_card_item_price_def"/>

        <LinearLayout
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="40dp">
            <Button
                android:id="@+id/id_shop_car_goods_add"
                android:text="+"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:minHeight="40dp"
                android:minWidth="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/id_shop_car_goods_num"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:text="20"/>
            <Button
                android:id="@+id/id_shop_car_goods_redu"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="-"
                android:minHeight="40dp"
                android:minWidth="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>